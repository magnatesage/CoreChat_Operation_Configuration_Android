<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <import type="android.graphics.Color"/>

        <variable
            name="dynamicUIModel"
            type="com.example.corechatoperationconfigapp.model.DynamicUIModel" />
    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".fragment.LiveChatFragment"
        android:background="@{Color.parseColor(dynamicUIModel.themeColor.secondaryColor)}">

        <include
            android:id="@+id/toolbar_layout"
            layout="@layout/layout_toolbar"
            app:dynamicUIModel="@{dynamicUIModel}"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_live_chat_list"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/toolbar_layout" />

    </RelativeLayout>
</layout>