<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:color="@color/spinnerArrow" android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/white" />
            <corners android:bottomLeftRadius="@dimen/_25sdp" android:bottomRightRadius="0dp" android:topLeftRadius="@dimen/_25sdp" android:topRightRadius="0dp" />
            <stroke android:width="@dimen/_1sdp" android:color="@color/lightGray" />
        </shape>
    </item>

    <item android:color="@color/white" android:state_pressed="false">
        <shape android:shape="rectangle">
            <solid android:color="@color/white" />
            <corners android:bottomLeftRadius="@dimen/_25sdp" android:bottomRightRadius="0dp" android:topLeftRadius="@dimen/_25sdp" android:topRightRadius="0dp" />
            <stroke android:width="@dimen/_1sdp" android:color="@color/lightGray" />
        </shape>
    </item>
</selector>