<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:color="@color/spinnerArrow" android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/white" />
            <corners android:bottomLeftRadius="0dp" android:bottomRightRadius="@dimen/_25sdp" android:topLeftRadius="0dp" android:topRightRadius="@dimen/_25sdp" />
            <stroke android:width="@dimen/_1sdp" android:color="@color/lightGray" />
        </shape>
    </item>

    <item android:color="@color/white" android:state_focused="false">
        <shape android:shape="rectangle">
            <solid android:color="@color/white" />
            <corners android:bottomLeftRadius="0dp" android:bottomRightRadius="@dimen/_25sdp" android:topLeftRadius="0dp" android:topRightRadius="@dimen/_25sdp" />
            <stroke android:width="@dimen/_1sdp" android:color="@color/lightGray" />
        </shape>
    </item>

</selector>